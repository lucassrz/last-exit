@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent

<root>
    <div class="crosshair"></div>
</root>

<style>
    root {
        position: absolute;
        width: 100%;
        height: 100%;
        pointer-events: all; /* Force le curseur visible */
    }

    .crosshair {
        position: absolute;
        left: 50%;
        top: 50%;
        width: 4px;
        height: 4px;
        background-color: white;
        border: 2px solid black;
        border-radius: 50%;
        transform: translate(-50%, -50%);
        pointer-events: none;
    }
</style>

@code {
    protected override int BuildHash() => System.HashCode.Combine( "crosshair" );
}
